<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Bruhdroid.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/fira_code</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AlertDialogCustom.Light" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textColorPrimary">@color/secondary</item>
        <item name="android:background">@color/primary_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Expression.Light">
        <item name="fontFamily">@font/fira_code</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="Block.Light">
        <item name="fontWeight">1400</item>
        <item name="borderRound">15dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


    <style name="Theme.Bruhdroid" parent="Theme.Bruhdroid.Light"/>
    <style name="Block" parent="Block.Light"/>
    <style name="Expression" parent="Expression.Light"/>
    <style name="AlertDialogCustom" parent="AlertDialogCustom.Light"/>

</resources>