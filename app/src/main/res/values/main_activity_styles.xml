<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="logo_1">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/coral</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="logo_2" parent="logo_1">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="main_text">
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="button">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">#580600</item>
        <item name="android:textSize">20dp</item>
        <item name="android:text">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="exitButton" parent="button">
        <item name="android:background">@color/white</item>
    </style>
</resources>