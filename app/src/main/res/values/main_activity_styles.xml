<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="logo_1">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="logo_2">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>