<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Bruhdroid.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/fira_code</item>
    </style>

    <style name="AlertDialogCustom.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textColorPrimary">@color/secondary</item>
        <item name="android:background">@color/primary_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Expression.Dark">
        <item name="fontFamily">@font/fira_code</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="Block.Dark">
        <item name="fontWeight">1400</item>
        <item name="borderRound">15dp</item>
    </style>

    <style name="Theme.Bruhdroid" parent="Theme.Bruhdroid.Dark"/>
    <style name="Block" parent="Block.Dark"/>
    <style name="Expression" parent="Expression.Dark"/>
    <style name="AlertDialogCustom" parent="AlertDialogCustom.Dark"/>
</resources>